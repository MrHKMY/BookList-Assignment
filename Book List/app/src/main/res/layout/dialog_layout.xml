<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mainDetailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_bookImage"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_weight="1"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/dialog_bookTitle"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:text="@string/book_title"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_below="@id/mainDetailLayout">

        <Button
            android:id="@+id/dialog_ReadButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/read"
            android:backgroundTint="@color/lightBlue"/>

        <Button
            android:id="@+id/dialog_ShareButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/share"
            android:backgroundTint="@color/lightBlue"/>

        <Button
            android:id="@+id/dialog_DeleteButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/delete"
            android:backgroundTint="@color/red" />
    </LinearLayout>

</RelativeLayout>